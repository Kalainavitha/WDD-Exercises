(
    [0] => 1
    [1] => 2
    [2] => 3
    [3] => 5
    [4] => 9
)
rsort():
Array
(
    [0] => 9
    [1] => 5
    [2] => 3
    [3] => 2
    [4] => 1
)
asort():
Array
(
    [b] => 1
    [a] => 2
    [d] => 4
    [c] => 9
)
arsort():
Array
(
    [c] => 9
    [d] => 4
    [a] => 2
    [b] => 1
)
ksort():
Array
(
    [a] => 2
    [b] => 1
    [c] => 9
    [d] => 4
)
krsort():
Array
(
    [d] => 4
    [c] => 9
    [b] => 1
    [a] => 2
)
usort():
Array
(
    [0] => 1
    [1] => 2
    [2] => 3
    [3] => 5
    [4] => 9
)
uasort():
Array
(
    [b] => 1
    [a] => 2
    [d] => 4
    [c] => 9
)
uksort():
Array
(
    [a] => 2
    [b] => 1
    [c] => 9
